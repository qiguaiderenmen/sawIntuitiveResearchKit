/* -*- Mode: Javascript; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- */
{
    "io":
    {
        "footpedals": "io/sawRobotIO1394-PSM1-foot-pedals.xml",
        "firewire-protocol": "sequential-read-write" // for debugging
    }
    ,
    "component-manager": {
        "components":
        [
            {
                "shared-library": "sawForceDimensionSDK",
                "class-name": "mtsForceDimension",
                "constructor-arg": {
                    "Name": "ForceDimensionSDK"
                },
                "configure-parameter": "omega7-11528.json"
            }
        ]
    }
    ,
    "arms":
    [
        {
            "name": "MTMR",  // created previously using custom components
            "type": "MTM_GENERIC",
            "component": "ForceDimensionSDK",
            "interface": "MTMR"
        }
        ,
        {
            "name": "PSM3",
            "type": "PSM_Si",
            "serial": "697446"
        }
    ]
    ,
    "psm-teleops":
    [
        {
            "mtm": "MTMR",
            "psm": "PSM3",
            "configure-parameter": {
                "ignore-jaw": false,
                "gripper-scaling": {
                   "max": 0.49,
                   "zero": -0.1
                },
                "scale": 0.4,
                "rotation" : [[ 0.0000, -1.0000,  0.0000],
                              [ 1.0000,  0.0000,  0.0000],
                              [ 0.0000,  0.0000,  1.0000]]
            }
        }
    ]
}
